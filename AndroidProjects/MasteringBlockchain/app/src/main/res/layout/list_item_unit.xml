<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="4dp"
        card_view:contentPadding="1dp"

        card_view:cardUseCompatPadding="true"
        android:id="@+id/cardView_unit"
        android:layout_margin="2dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="5dp"
                android:orientation="vertical">
                <FrameLayout
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/image_loading_lottie_unit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        app:lottie_autoPlay="true"
                        android:padding="20dp"
                        app:lottie_fileName="thin_round_loader_anim.json"
                        app:lottie_loop="true"/>

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/image_loaded_lottie_unit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        app:lottie_autoPlay="false"
                        android:padding="5dp"
                        app:lottie_fileName="beacon_anim_1.json"
                        app:lottie_loop="true"/>

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/image_loaded_lottie_unit_green"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        app:lottie_autoPlay="false"
                        android:padding="5dp"
                        app:lottie_fileName="beacon_anim_1_green.json"
                        app:lottie_loop="true"/>


                    <ImageView
                        android:id="@+id/unitIcon_imageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:padding="20dp"
                        android:src="@mipmap/ic_launcher"/>




                </FrameLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp">
                    <TextView
                        android:id="@+id/unitSerialID_textView"
                        android:layout_width="match_parent"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Unit 1:"
                        style="@style/ListTitles"
                        />
                    <TextView
                        android:id="@+id/unitTitle_textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:minLines="3"
                        android:textAlignment="center"
                        android:text="Name of this unit"
                        style="@style/ListItemTitles_ImportantTextSnippets"/>
                </LinearLayout>



                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="2dp"
                    android:background="?android:attr/listDivider"
                    />

                <!--<Button-->
                    <!--android:id="@+id/viewTopics_button"-->
                    <!--style="@style/Buttons_Tabs"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_margin="5dp"-->
                    <!--android:background="?android:attr/selectableItemBackground"-->
                    <!--android:minHeight="0dp"-->
                    <!--android:minWidth="0dp"-->
                    <!--android:text="VIEW >"/>-->

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="70dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    app:lottie_autoPlay="true"
                    android:padding="5dp"
                    app:lottie_fileName="right_arrow_anim.json"
                    app:lottie_loop="true"/>



            </LinearLayout>


        </FrameLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>